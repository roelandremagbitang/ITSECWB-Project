{{!-- registration.hbs --}}
<header class="header header-login" style="height: auto; padding: 10px 0;">
  <div class="container d-flex justify-content-center align-items-center">
    <img src="/images/forum-friends-logo.png" 
         alt="Forum Friends Logo" 
         style="width: 200px; height: auto;" />
  </div>
</header>

<main class="py-5">
  <div class="container d-flex justify-content-center" style="min-height: 60vh;">
    <div class="row justify-content-center w-100">
      <div class="col-12 col-md-8 col-lg-6">
        <div class="card p-4 shadow">
          <h3 class="text-center mb-4">Create an Account</h3>
          {{#if error}}
            <div class="alert alert-danger">
              {{error}}
            </div>
          {{/if}}
          <form method="POST" action="/register">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input type="text" class="form-control" id="username" name="username" placeholder="Enter your username" value="{{formData.username}}">
            </div>
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email" value="{{formData.email}}">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" placeholder="Enter your password">
            </div>
            <div class="mb-3">
              <label for="confirmPassword" class="form-label">Confirm Password</label>
              <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Confirm your password">
            </div>
            <div class="mb-3">
              <label for="bio" class="form-label">Bio (Optional)</label>
              <textarea class="form-control" id="bio" name="bio" rows="3" placeholder="Write a brief description about yourself">{{formData.bio}}</textarea>
            </div>
            <div class="d-grid">
              <button type="submit" id="signupBtn" class="btn btn-primary">Sign Up</button>
            </div>
          </form>
          <div class="text-center mt-3">
            <p class="mb-0">
              Already have an account? 
              <a href="/login" id="loginLink" class="text-decoration-none">Login</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<footer class="text-center py-3">
  <div class="container">
    <p class="text-muted mb-0">&copy; 2025 Forum Friends</p>
  </div>
</footer>
