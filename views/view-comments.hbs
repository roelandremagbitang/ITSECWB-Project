{{!-- view-comments.hbs --}}
<header class="header">
  <div class="container d-flex justify-content-between align-items-center">
    <a href="/home">
      <img src="/images/forum-friends-logo.png" alt="Forum Friends Logo" class="logo" style="width:180px; height:auto;" />
    </a>
    <nav class="d-flex gap-3">
      <a href="/home" class="nav-link">Home</a>
      <a href="/profile/{{profile.username}}" class="nav-link">Profile</a>
      <a href="/logout" class="nav-link">Logout</a>
    </nav>
  </div>
</header>

<main class="container py-5">
  <h3 class="text-center mb-4">All Comments by {{profile.username}}</h3>

  {{#if allComments.length}}
    <section class="content-section">
      {{#each allComments}}
        <div class="comment-item">
          <p>"{{this.text}}"</p>
          <p class="text-muted">On: <a href="/post/{{this.postId}}">{{this.postTitle}}</a> â€¢ {{this.timestamp}}</p>
        </div>
      {{/each}}
    </section>
  {{else}}
    <p class="text-center text-muted">No comments yet.</p>
  {{/if}}

  <div class="text-center mt-4">
    <a href="/profile/{{profile.username}}" class="btn btn-secondary">Back to Profile</a>
  </div>
</main>

<footer class="text-center py-3">
  <p class="text-muted">&copy; 2025 Forum Friends</p>
</footer>
