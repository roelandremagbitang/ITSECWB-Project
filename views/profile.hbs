{{!-- profile.hbs --}}
<header class="header">
  <div class="container d-flex justify-content-between align-items-center">
    <a href="/home" class="me-3">
      <img src="/images/forum-friends-logo.png" alt="Forum Friends Logo" class="logo" style="width:180px; height:auto;" />
    </a>
    <nav class="d-flex align-items-center">
      <a href="/home" class="nav-link me-3">Home</a>
      <a href="/profile/{{profile.username}}" class="nav-link me-3 active">Profile</a>
      <a href="/logout" class="nav-link">Logout</a>
    </nav>
  </div>
</header>

  <main class="container py-5">
    <div class="profile-container position-relative">
      <img src="{{profile.picture}}" alt="Profile Picture" class="profile-img">
      <a href="/edit-profile" class="position-absolute top-0 end-0 btn btn-sm btn-outline-primary mt-3 me-3">
        Edit Profile
      </a>
      <h3 class="mt-3">{{profile.username}}</h3>
      <p class="text-muted">"{{profile.bio}}"</p>
    </div>


    {{!-- Latest Posts Section --}}
  <section class="content-section">
    <h4 class="text-center">Latest Posts</h4>
    {{#each latestPosts}}
      <div class="post">
        <h5><a href="/post/{{this.id}}">{{this.title}}</a></h5>
        <p class="text-muted">Posted {{this.timestamp}} • {{this.votes}} upvotes</p>
      </div>
    {{/each}}
    <div class="view-more text-center">
      <a href="/profile/{{profile.username}}/posts">View All Posts</a>
    </div>
  </section>

  {{!-- Latest Comments Section  --}}
  <section class="content-section">
    <h4 class="text-center">Recent Comments</h4>
    {{#each latestComments}}
      <div class="comment-item">
        <p>"{{this.text}}"</p>
        <p class="text-muted">On: <a href="/post/{{this.postId}}">{{this.postTitle}}</a> • {{this.timestamp}}</p>
      </div>
    {{/each}}
    <div class="view-more text-center">
      <a href="/profile/{{profile.username}}/comments">View All Comments</a>
    </div>
  </section>
</main>

<footer class="text-center py-3">
  <p class="text-muted">&copy; 2025 Forum Friends</p>
</footer>
