{{!-- view-posts.hbs --}}
<header class="header">
  <div class="container d-flex justify-content-between align-items-center">
    <a href="/home">
      <img src="/images/forum-friends-logo.png" alt="Forum Friends Logo" class="logo" style="width:180px; height:auto;" />
    </a>
    <nav class="d-flex gap-3">
      <a href="/home" class="nav-link">Home</a>
      <a href="/profile/{{profile.username}}" class="nav-link">Profile</a>
      <a href="/logout" class="nav-link">Logout</a>
    </nav>
  </div>
</header>

<main class="container py-5">
  <h3 class="text-center mb-4">All Posts by {{profile.username}}</h3>

  {{#if allPosts.length}}
    <section class="content-section">
      {{#each allPosts}}
        <div class="post">
          <h5><a href="/post/{{this.id}}">{{this.title}}</a></h5>
          <p class="text-muted">Posted {{this.timestamp}} â€¢ {{this.votes}} upvotes</p>
        </div>
      {{/each}}
    </section>
  {{else}}
    <p class="text-center text-muted">No posts yet.</p>
  {{/if}}

  <div class="text-center mt-4">
    <a href="/profile/{{profile.username}}" class="btn btn-secondary">Back to Profile</a>
  </div>
</main>

<footer class="text-center py-3">
  <p class="text-muted">&copy; 2025 Forum Friends</p>
</footer>
