{{!-- forgot-password.hbs --}}

<header class="header header-login" style="height: auto; padding: 10px 0;">
  <div class="container d-flex justify-content-center align-items-center">
    <img 
      src="/images/forum-friends-logo.png" 
      alt="Forum Friends Logo" 
      style="width: 200px; height: auto;" 
    />
  </div>
</header>

<main class="py-5">
  <div class="container d-flex justify-content-center" style="min-height: 60vh;">
    <div class="row justify-content-center w-100">
      <div class="col-12 col-md-6 col-lg-4">
        <div class="card p-4 shadow">
          <h3 class="text-center mb-4">Forgot Password</h3>
          <p>Enter your email address or username below, and weâ€™ll send you instructions to reset your password.</p>
          <form method="POST" action="/forgot-password">
            <div class="mb-3">
              <label for="identifier" class="form-label">Email / Username</label>
              <input 
                type="text" 
                class="form-control" 
                name="identifier" 
                id="identifier" 
                placeholder="Enter your email or username" 
              />
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-primary">Send Reset Link</button>
            </div>
          </form>
          <div class="text-center mt-3">
            <p class="mb-0">
              <a href="/login" class="text-decoration-none">Back to Login</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>

<footer class="text-center py-3">
  <div class="container">
    <p class="text-muted mb-0">&copy; 2025 Forum Friends</p>
  </div>
</footer>
